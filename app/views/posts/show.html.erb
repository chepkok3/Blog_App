<h1> Post detail with comments  </h1>
<div class="details_post">

  <div class="details_post_card">
  <div class="details_post_card_header">
    <p class ="post_title"> Post <%=@post.id%> by <%=@post.author.name%></p>
    <p>Comments: <%=@post.comments_counter%> Likes:  <%=@post.likes_counter%></p>
  </div>
  <div>
    <p><%=@post.text%></p>
  </div>
    </div>
    <% if  !@post.comments.empty?%>
    <div class ="details_post_comment">
     <% @post.comments.each do |comment| %>
       <%= render 'shared/comment', comment:comment %>
       <% end %>
  </div>
    <%end%>
</div>