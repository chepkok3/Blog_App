<%= link_to user_path(user.id) do%>
  <article class="user_view">
    <div class="picture_user">
    </div>
    <div class="body_user">
      <div class="name">
      <%= user.name %>
      </div>
      <div class="posts_count">
      Number of posts: <%= user.posts_counter %>
      </div>
    </div>
  </article>
<% end %>